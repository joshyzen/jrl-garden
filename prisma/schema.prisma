generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  scientificName String?
  isNative    Boolean
  lightNeeds  String
  matureSize  String
  description String
  imageUrl    String?
  category    String
  price       Float?
  unit        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  images      PlantImage[]
}

model ServiceItem {
  id           String @id @default(cuid())
  category     String
  section      String?
  name         String
  unit         String
  pricePerUnit Float
}

model Estimate {
  id         String   @id @default(cuid())
  clientName String
  phone      String
  address    String
  items      Json
  total      Float
  labor      Float    @default(0)
  status     String   @default("pending")
  createdAt  DateTime @default(now())
}

model PlantImage {
  id        String   @id @default(cuid())
  plantId   String
  url       String
  alt       String?
  primary   Boolean  @default(false)
  createdAt DateTime @default(now())
  plant     Plant    @relation(fields: [plantId], references: [id], onDelete: Cascade)
  @@index([plantId])
}
