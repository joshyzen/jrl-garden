generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  isNative    Boolean
  lightNeeds  String
  matureSize  String
  description String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
}

model ServiceItem {
  id           String @id @default(cuid())
  category     String
  section      String?
  name         String
  unit         String
  pricePerUnit Float
}

model Estimate {
  id         String   @id @default(cuid())
  clientName String
  phone      String
  address    String
  items      Json
  total      Float
  status     String   @default("pending")
  createdAt  DateTime @default(now())
}
